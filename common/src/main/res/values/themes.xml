<resources>
    <!-- Base application theme. -->
    <style name="Theme.LigoDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg_black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ActivityTheme" parent="Theme.LigoDemo">
        <item name="android:windowBackground">@color/bg_black</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetTheme</item>
        <item name="colorPrimary">@color/accent</item>
    </style>

    <style name="BottomSheetTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="RatingBarTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_40</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@color/gray_30</item>
        <item name="dialogCornerRadius">16dp</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/ButtonStyle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/gray_80</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent</item>
        <item name="rippleColor">@color/transparent</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:padding">8dp</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>